{
  "order": 0,
  "template": "{{ index }}",
  "settings": {
    "index": {
      "refresh_interval": "5s"
    },
    "analysis": {
      "filter": {
        "norwegian_stop": {
          "type": "stop",
          "stopwords": "_norwegian_"
        },
        "norwegian_stemmer": {
          "type": "stemmer",
          "language": "norwegian"
        }
      },
      "analyzer": {
        "norwegian": {
          "tokenizer": "standard",
          "char_filter": [
            "html_strip"
          ],
          "filter": [
            "lowercase",
            "norwegian_stop",
            "norwegian_stemmer"
          ]
        }
      }
    }
  },
  "mappings": {
    "_default_": {
      "_source": {
        "enabled": true
      },
      "dynamic_templates": [
        {
          "query": {
            "mapping": {
              "type": "text",
              "index": "analyzed",
              "analyzer": "norwegian"
            },
            "match": "*",
            "unmatch": "*_filter"
          }
        },
        {
          "filter": {
            "mapping": {
              "type": "keyword"
            },
            "match": "*_filter"
          }
        }
      ],
      "_all": {
        "enabled": true
      },
      "properties": {
        "autocomplete": {
          "type" : "completion",
          "analyzer" : "simple",
          "search_analyzer" : "simple",
          "contexts": [
            {
              "name": "content_type",
              "type": "category",
              "path": "content_type"
            }
          ]
        }
      }
    }
  },
  "aliases": {

  }
}
